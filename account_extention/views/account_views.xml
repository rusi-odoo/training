<odoo>
    <record id="view_move_form_inherit_account_extention" model="ir.ui.view">
        <field name="name">view.move.form.inherit.account.extention</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="is_diff_currency" invisible="1" />
                <field name="falak_rate" attrs="{'invisible': [('is_diff_currency','=',False)]}" />
            </xpath>
        </field>
    </record>
</odoo>