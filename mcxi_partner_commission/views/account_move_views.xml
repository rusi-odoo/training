<odoo>
    <record id="view_move_form_inherit_mcxi_partner_commission" model="ir.ui.view">
        <field name="name">view.move.form.inherit.mcxi.partner.commission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='preview_invoice']" position="before">
                <button name="action_create_commission" type="object" string="Create External Commission" class="oe_highlight"
                        invisible=" commission_external_move_id or state != 'posted' or move_type  in ('entry', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')" context="{'is_external': True}"/>
                <button name="action_create_commission" type="object" string="Create Internal Commission" class="oe_highlight"
                        invisible="commission_internal_move_id or state != 'posted' or move_type  in ('entry', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')" context="{'is_internal': True}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        name="action_view_commission"
                        type="object"
                        icon="fa-pencil-square-o"
                        invisible="not commission_external_move_id or move_type in ( 'in_invoice', 'entry', 'in_refund', 'out_receipt', 'in_receipt')" context="{'is_external': True}">
                        <field name="total_external_commission" string="External Commission" widget="statinfo"/>
                </button>
                <button class="oe_stat_button"
                        name="action_view_commission"
                        type="object"
                        icon="fa-pencil-square-o"
                        invisible="not commission_internal_move_id or move_type in ('in_invoice', 'entry', 'in_refund', 'out_receipt', 'in_receipt')" context="{'is_internal': True}">
                        <field name="total_internal_commission" string="Internal Commission" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree" position="inside">
                <field name="mcxi_commission_line_ids" widget="many2many_tags" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree" position="inside">
                <field name="mcxi_origin_invoice_line_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="commission_external_move_id" invisible="1"/>
                <field name="commission_internal_move_id" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page name='commissions' string="Commissions">
                    <group id='commission_tab_group'>
                        <group string="Internal Commission" name="internal_commission">
                            <field name="total_internal_commission"/>
                            <field name="total_account_owner_commission"/>
                            <field name="total_dsm_commission"/>
                            <field name="total_bdm_commission"/>
                        </group>
                        <group string="External Commission" name="external_commission">
                            <field name="total_external_commission"/>
                            <field name="total_agent1_commission"/>
                            <field name="total_agent2_commission"/>
                            <field name="total_agent3_commission"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
