<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_external_report_form" model="ir.ui.view">
            <field name="name">external.report.form</field>
            <field name="model">external.report</field>
            <field name="arch" type="xml">
                <form string="Generate Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="dsm_id" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Print" name="action_generate_external_report" type="object"
                            class="oe_highlight" />
                        <button string="Cancel" class="btn btn-secondary" special="cancel"
                            data-hotkey="x" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_external_report" model="ir.actions.act_window">
            <field name="name">Generate Report</field>
            <field name="res_model">external.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mcxi_partner_commission.view_external_report_form" />
            <field name="target">new</field>
        </record>



        
        <record id="view_internal_report_form" model="ir.ui.view">
            <field name="name">internal.report.form</field>
            <field name="model">internal.report</field>
            <field name="arch" type="xml">
                <form string="Generate Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date" />
                                <field name="end_date" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Print" name="action_generate_internal_report" type="object"
                            class="oe_highlight" />
                        <button string="Cancel" class="btn btn-secondary" special="cancel"
                            data-hotkey="x" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_internal_report" model="ir.actions.act_window">
            <field name="name">Generate Report</field>
            <field name="res_model">external.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mcxi_partner_commission.view_internal_report_form" />
            <field name="target">new</field>
        </record>
    </data>
</odoo>