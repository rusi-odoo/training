<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="aphora_report_delivery_document2" inherit_id="stock_delivery.report_delivery_document2">
        <xpath expr="//div[@t-if='o.shipping_weight']" position="attributes">
            <attribute name="class" position="add" separator=" ">d-none</attribute>
        </xpath>
        <xpath expr="//div[@name='div_sched_date']" position="after">
            <div t-if="o.aphora_shipping_weight_adjusted" class="col-auto">
                <strong>Adjusted Weight:</strong>
                <br/>
                <span t-field="o.aphora_shipping_weight_adjusted"/>
                <span t-field="o.weight_uom_name"/>
            </div>
        </xpath>
    </template>

    <template id="aphora_report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath expr="//div[hasclass('page')]" position="after">
            <div class="oe_structure"></div>
            <p t-field="o.aphora_delivery_note"/>
            <div class="oe_structure"></div>
        </xpath>
        <xpath expr="//table[@name='stock_move_table']//span[@t-field='move.quantity']" position="attributes">
            <attribute name="t-options">{"widget": "float", "precision": 2}</attribute>
        </xpath>
        <xpath expr="//table[@name='stock_move_table']//span[@t-field='move.product_uom_qty']" position="attributes">
            <attribute name="t-options">{"widget": "float", "precision": 2}</attribute>
        </xpath>
        <xpath expr="//table[@name='stock_backorder_table']//span[@t-field='bo_line.product_uom_qty']" position="attributes">
            <attribute name="t-options">{"widget": "float", "precision": 2}</attribute>
        </xpath>
    </template>

    <template id="aphora_stock_report_delivery_aggregated_move_lines" inherit_id="stock.stock_report_delivery_aggregated_move_lines">
        <xpath expr="//td[@name='move_line_aggregated_qty_ordered']/span[1]" position="attributes">
            <attribute name="t-options">{"widget": "float", "precision": 2}</attribute>
        </xpath>
        <xpath expr="//td[@name='move_line_aggregated_quantity']/t/span[1]" position="attributes">
            <attribute name="t-options">{"widget": "float", "precision": 2}</attribute>
        </xpath>
    </template>

    <template id="aphora_stock_report_delivery_has_serial_move_line" inherit_id="stock.stock_report_delivery_has_serial_move_line">
        <xpath expr="//td[@name='move_line_lot_quantity']/span[@t-field='move_line.quantity']" position="attributes">
            <attribute name="t-options">{"widget": "float", "precision": 2}</attribute>
        </xpath>
    </template>

    <template id="report_picking_inherit_aphora_kaja_food" inherit_id="stock.report_picking">
        <xpath expr="//span[@t-field='ml.quantity']" position="attributes">
            <attribute name="t-options">{"widget": "float", "precision": 2}</attribute>
        </xpath>
    </template>
</odoo>
