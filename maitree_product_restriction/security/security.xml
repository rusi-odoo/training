<odoo>
    <data>
        <record id="maitree_product_categ_user_rule" model="ir.rule">
            <field ref="product.model_product_template" name="model_id" />
            <field name="name">Maitree user permissions -</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user')), (4, ref('purchase.group_purchase_user')),(4, ref('sales_team.group_sale_salesman'))]" />
            <field name="domain_force">['|', ('categ_id.maitree_allowed_users', '=', user.id), ('categ_id.maitree_allowed_users', '=', False)]</field>
        </record>

        <!-- Record rule for admin -->
        <record id="maitree_product_categ_admin_rule" model="ir.rule">
            <field ref="product.model_product_template" name="model_id" />
            <field name="name">Maitree admin permissions</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_manager')), (4, ref('purchase.group_purchase_manager')),(4, ref('sales_team.group_sale_manager'))]" />
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</odoo>