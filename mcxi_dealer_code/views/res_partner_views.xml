<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherited_mcxi_dealer_code" model="ir.ui.view">
        <field name="name">view.partner.form.inherited.mcxi.dealer.code</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//span[@name='address_name']" position="before">
                <field name="contact_type" widget="radio" options="{'horizontal': True}"/>
                <field name="dealer_code"/>
            </xpath>
        </field>
    </record>
</odoo>
